<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/host_detail_view_title_text"
        android:textAlignment="center"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50px"
            android:text="@string/host_dialog_host_name_tips" />

        <TextView
            android:id="@+id/view_show_host_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50px"
            android:text="@string/host_dialog_address_tips" />

        <TextView
            android:id="@+id/view_show_host_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50px"
            android:text="@string/host_dialog_port_tips" />

        <TextView
            android:id="@+id/view_show_host_port"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50px"
            android:text="@string/host_dialog_user_tips" />

        <TextView
            android:id="@+id/view_show_host_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50px"
            android:text="@string/host_dialog_password_tips" />

        <TextView
            android:id="@+id/view_show_host_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50px"
            android:text="@string/host_dialog_characterSet_tips" />

        <TextView
            android:id="@+id/view_show_host_characterSet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.qmuiteam.qmui.layout.QMUIButton
            android:id="@+id/view_show_host_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_show_host_btn_confirm"
            android:text="@string/host_dialog_cancel_btn_text" />

        <com.qmuiteam.qmui.layout.QMUIButton
            android:id="@+id/view_show_host_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/host_dialog_confirm_btn_text" />
    </RelativeLayout>
</LinearLayout>